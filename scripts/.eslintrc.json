{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "plugins": ["node"],
  "rules": {
    "strict": "error",
    "no-console": "off",
    "node/no-missing-require": "error",
    "node/no-unsupported-features": ["error", { "version": 4 }]
  }
}
